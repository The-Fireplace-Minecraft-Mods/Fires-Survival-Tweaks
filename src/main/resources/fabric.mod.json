{
  "schemaVersion": 1,
  "id": "fst",
  "version": "${version}",
  "name": "${readable_name}",
  "description": "${mod_description}",
  "authors": [
    "The_Fireplace"
  ],
  "contact": {
    "homepage": "${fabric_curseforge_url}",
    "sources": "${github_url}",
    "issues": "${github_url}/issues",
    "modrinth": "${modrinth_url}"
  },
  "license": "${license_id}",
  "icon": "${logo_filename}",
  "environment": "*",
  "entrypoints": {
    "di-main": [
      "dev.the_fireplace.fst.FiresSurvivalTweaks"
    ],
    "modmenu": [
      "dev.the_fireplace.fst.entrypoints.ModMenuEntrypoint"
    ]
  },
  "mixins": [
    "fst.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.0",
    "fabric": "*",
    "fabric-events-interaction-v0": "*",
    "minecraft": "1.14.X",
    "fireplacelib": ">=6.0.5 <7"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${discord_url}"
      }
    }
  }
}
